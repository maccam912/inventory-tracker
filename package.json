{
  "name": "inventory-tracker",
  "version": "1.0.0",
  "description": "A simple inventory tracking application using Electron, TypeScript, Alpine.js, and SQLite.",
  "main": "src/main/index.ts",
  "scripts": {
    "start": "electron .",
    "dev": "vite",
    "build": "vite build",
    "test": "vitest",
    "test:unit": "vitest",
    "test:e2e": "playwright test --config=tests/playwright.config.ts",
    "lint": "eslint src tests --ext .ts,.tsx",
    "prepare": "npm run build"
  },
  "dependencies": {
    "alpinejs": "^3.0.0",
    "drizzle-orm": "^0.43.1",
    "electron": "^25.0.0",
    "sqlite": "^5.1.1",
    "sqlite3": "^5.0.0",
    "yaml": "^2.8.0"
  },
  "devDependencies": {
    "@playwright/test": "^1.52.0",
    "@typescript-eslint/eslint-plugin": "^8.32.1",
    "@typescript-eslint/parser": "^8.32.1",
    "eslint": "^8.0.0",
    "eslint-config-prettier": "^8.0.0",
    "eslint-plugin-prettier": "^4.0.0",
    "jsdom": "^26.1.0",
    "playwright": "^1.30.0",
    "typescript": "^5.0.0",
    "vite": "^4.0.0",
    "vitest": "^0.30.1"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yourusername/inventory-tracker.git"
  },
  "keywords": [
    "electron",
    "typescript",
    "alpinejs",
    "sqlite",
    "inventory",
    "tracking"
  ],
  "author": "Your Name",
  "license": "MIT"
}
